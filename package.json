{
  "name": "swagger-pdf-generator",
  "displayName": "Swagger PDF Generator",
  "description": "Generate professional PDF documentation from Spring Boot Controllers annotated with Swagger/OpenAPI.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "swagger-pdf.generateControllerDoc",
        "title": "Swagger PDF: Generate Controller Documentation"
      },
      {
        "command": "swagger-pdf.generateEndpointDoc",
        "title": "Swagger PDF: Generate Endpoint Documentation"
      },
      {
        "command": "swagger-pdf.configureAI",
        "title": "Swagger PDF: Configure AI Provider"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "swagger-pdf.generateControllerDoc",
          "when": "resourceLangId == java",
          "group": "navigation"
        },
        {
          "command": "swagger-pdf.generateEndpointDoc",
          "when": "resourceLangId == java",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Swagger PDF Generator",
      "properties": {
        "swagger-pdf-generator.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai"
          ],
          "description": "Provider for AI enhancement (e.g., openai)."
        },
        "swagger-pdf-generator.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the AI provider. Leave empty to use .env file."
        },
        "swagger-pdf-generator.model": {
          "type": "string",
          "default": "gpt-4-turbo",
          "description": "AI Model to use (e.g., gpt-4-turbo)."
        },
        "swagger-pdf-generator.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "Base URL for the AI API."
        },
        "swagger-pdf-generator.outputDirectory": {
          "type": "string",
          "default": "docs/api",
          "description": "Directory to save generated PDFs. Relative to workspace root."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^4.28.0",
    "pdfmake": "^0.2.9"
  }
}